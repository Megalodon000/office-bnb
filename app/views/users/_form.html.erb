<%= form_with(model: @user, url: users_path) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.text_field :password %>
  </div>
  <div>
    <%= form.submit 'Create user' %>
  </div>
<% end %>
